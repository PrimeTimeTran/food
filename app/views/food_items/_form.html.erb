<%= form_for(food_item) do |f| %>
  <% if food_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food_item.errors.count, "error") %> prohibited this food_item from being saved:</h2>
      <ul>
      <% food_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", size: "5x5" %>
  </div><br>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field(:price, in: 5.0..30.0, :step => 0.25) %>
  </div>

  <div class="field">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :section_id %>
    <%  f.select :section_id, Section.all.map { |x| [x.name, x.id] } %>
     <!-- Another Way -->
    <% sections = Section.all.map { |section| [section.name, section.id] } %>
    <%= f.select(:section_id, options_for_select(sections)) %>
  </div><br>

  <div class="actions">
    <%= f.submit :Submit, class: "btn btn-success" %>
  </div><br>
<% end %>
