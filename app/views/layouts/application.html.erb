<!DOCTYPE html>
<html>
  <head>
    <title>Food</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <!-- Navigation -->
    <nav class="navbar">
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <%= link_to "CoderSchool Restaurant", root_path, class: "navbar-brand" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Item", new_food_item_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Menu", menu_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact Us", contact_us_path, class: "nav-link" %>
        </li>
      </ul>

      <%= form_tag(menu_path, :method => "get", class: "form-inline pull-xs-right") do %>
         <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
         <%= submit_tag "Search", class: "btn btn-success" %>
      <% end %>
    </nav><br />
    <div class="container wrapper">
      <%= yield %>
      <div class="push"></div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
