<!-- Block for displaying the menu -->
<h1>Menu</h1>
<ul class="nav nav-pills">
  <% Section.all.each do |section| %>
  <li class="nav-item">
    <%= link_to section.name, menu_path(section: section.name), class: "nav-link #{'active' if params[:section] == section.name}" %>
  </li>
  <% end %>
</ul>

<div class="card card-block">
  <%= form_tag nil, method: 'get' do %>
    <%= hidden_field_tag :section, params[:section] %>
    <div class="form-inline">
        <%= select_tag :sort_column, options_for_select([['Name', 'name'], ['Price', 'price']]), class: 'form-control' %>
        <%= select_tag :sort_direction, options_for_select([['Asecending', 'asc'], ['Desencding', 'desc']]), class: 'form-control' %>
        <%= submit_tag "Sort", class: "btn btn-secondary" %>
      </div>
      <% end %>
</div>


<% @food_items.each do |item| %>
<div class="card">
  <div class="card-header"><%= link_to item.name, food_items_path+"/#{item.id}" %></div>

  <div class="card-block">
    <h4>Price:</h4><%= item.price %><br><br>
    <h4>Description:</h4><%= item.description %><br><br>
    <h4>Section:</h4><%= item.section.name %><br><br>
    <%= link_to 'Order', new_food_item_order_path(item), class: "btn btn-danger" %>
    <%= image_tag item.image_url_or_auto, height: "100" %>
  </div>
</div>
<% end %>
