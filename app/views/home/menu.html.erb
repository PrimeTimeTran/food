<!-- Block for displaying the menu -->
<h1>Menu</h1>

<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
  <div>
    <div class="navbar-nav">
      <% Section.all.each do |section| %>
        <%= link_to section.name, menu_path(section_id: section.id), class: "nav-item nav-link #{'active' if params[:section_id] == section.id}" %>
      <% end %>

    <%= form_tag nil, method: 'get' do %>
      <%= hidden_field_tag :section_id, params[:section_id] %>
        <div class="pull-lg-right">
          <%= select_tag :sort_column, options_for_select([['Name', 'name'], ['Price', 'price']]) %>
          <%= select_tag :sort_direction, options_for_select([['Asecending', 'asc'], ['Desencding', 'desc']]) %>
          <%= submit_tag "Sort", class: "btn btn-outline-success" %>
        </div>
    <% end %>
  </div>
</nav><br>

<div class="row">
  <% @food_items.each do |item| %>
    <div class="col-md-4">
      <div class="card" style="width: 20rem;">
        <%= image_tag item.image_url_or_auto, class: "card-img-top" %>
        <div class="card-block">
          <h4 class="card-title"><%= link_to item.name, food_items_path+"/#{item.id}" %></h4><p>$<%= item.price %></p>
          <p class="card-text">
            <h4>Description:</h4>
            <p class="description"><%= item.description %></p>
            <h4>Section:</h4>
            <p><%= item.section.name %></p>
          </p>
          <%= link_to 'Order', new_food_item_order_path(item), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
